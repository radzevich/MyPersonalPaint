<Window x:Class="PaintWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF"
        mc:Ignorable="d"
        Title="My Personal Paint" Height="800" Width="1500">
    <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="drawingBox" Grid.Row="1" Grid.RowSpan="1" />
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="1" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\circle.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="1" Grid.Row="1" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\ellipse.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="0" Grid.Row="2" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\square.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="1" Grid.Row="2" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\rectangle.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="0" Grid.Row="3" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\isoscale_triangle.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="1" Grid.Row="3" BorderThickness="0">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\right_triangle.png"/>
                </Button.Content>
            </Button>

            <Button Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2">
                <Button.Background>
                    <SolidColorBrush Color="White" />
                </Button.Background>
                <Button.Content>
                    <ImageBrush ImageSource="img\line.png"/>
                </Button.Content>
            </Button>
            
            <Grid.Background>
                <SolidColorBrush Color="Gainsboro" />
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
