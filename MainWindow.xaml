<Window x:Class="PaintWPF.MainWindow" x:Name="PaintMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF"
        mc:Ignorable="d"
        Title="My Personal Paint" Height="800" Width="1500">
    <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="False" >
        <Grid.ColumnDefinitions>
            <!--Tools panel-->
            <ColumnDefinition Width="80"/>
            <!--Drawing field (canvas)-->
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--Drawing field-->
        
        <!--Tools panel definition-->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="DimGray" />
            </Grid.Background>
        </Grid>

        <InkCanvas x:Name="drawingBox" Grid.Row="1" Grid.Column="1"
        />

    </Grid>
</Window>
