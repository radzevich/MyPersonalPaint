<Window x:Class="PaintWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500">
    <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="drawingBox" Grid.Row="1" Grid.RowSpan="1" />
        <Grid Grid.Column="0" Grid.Row="0" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" BorderThickness="0" Margin="5, 2, 5, 2">
                <Button.Background>
                    <ImageBrush ImageSource="img\circle.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="1" Grid.Row="0" BorderThickness="0" Margin="5, 5, 5, 5">
                <Button.Background>
                    <ImageBrush ImageSource="img\ellipse.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="0" Grid.Row="1" BorderThickness="0" Margin="5, 2, 5, 2">
                <Button.Background>
                    <ImageBrush ImageSource="img\square.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="1" Grid.Row="1" BorderThickness="0" Margin="5, 5, 5, 5">
                <Button.Background>
                    <ImageBrush ImageSource="img\rectangle.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="0" Grid.Row="2" BorderThickness="0" Margin="5, 2, 5, 2">
                <Button.Background>
                    <ImageBrush ImageSource="img\isoscale_triangle.png"/>
                </Button.Background>
            </Button>
            <Button Grid.Column="1" Grid.Row="2" BorderThickness="0" Margin="5, 2, 5, 2">
                <Button.Background>
                    <ImageBrush ImageSource="img\right_triangle.png"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
