<Window x:Class="PaintWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintWPF"
        mc:Ignorable="d"
        Title="My Personal Paint" Height="800" Width="1500">
    <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="drawingBox" Grid.Row="1" Grid.RowSpan="1" />
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\circle.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\ellipse.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="0" Grid.Row="2" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\square.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="1" Grid.Row="2" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\rectangle.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="0" Grid.Row="3" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\isoscale_triangle.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="1" Grid.Row="3" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\right_triangle.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>

            <Button Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="DarkGray">
                <Button.Background>
                    <SolidColorBrush Color="WhiteSmoke" />
                </Button.Background>
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Image Source="img\line.png " Margin="2, 2, 2, 2"/>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            
            <Grid.Background>
                <SolidColorBrush Color="DimGray" />
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
